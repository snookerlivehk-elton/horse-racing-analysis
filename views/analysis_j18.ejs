<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>J18 Analysis - <%= race.hkjcId %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .highlight-green { background-color: #d4edda; }
        .highlight-red { background-color: #f8d7da; }
        .trend-up { color: green; font-weight: bold; }
        .trend-down { color: red; font-weight: bold; }
    </style>
</head>
<body class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Analysis: <%= race.hkjcId %> (Race <%= race.raceNo %>)</h1>
        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>

    <div class="row">
        <!-- Pundit Perf -->
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">Pundit Performance (J18 Like)</div>
                <div class="card-body">
                    <% if (punditPerf) { %>
                        <p><strong>Picks:</strong> <%= punditPerf.picks.join(', ') %></p>
                        <p><strong>Winner Picked?</strong> 
                            <span class="<%= punditPerf.winnerPicked ? 'text-success' : 'text-danger' %>">
                                <%= punditPerf.winnerPicked ? 'YES (Rank ' + punditPerf.winnerPickRank + ')' : 'NO' %>
                            </span>
                        </p>
                        <p><strong>Top 4 Count:</strong> <%= punditPerf.top4PickedCount %></p>
                    <% } else { %>
                        <p class="text-muted">No pundit data available.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Odds Drops -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">Odds Drop (T-30 vs T-0)</div>
                <div class="card-body">
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Horse</th>
                                <th>T-30</th>
                                <th>T-0</th>
                                <th>Drop %</th>
                                <th>Sudden?</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% oddsDrops.sort((a,b) => b.dropRate - a.dropRate).forEach(d => { %>
                                <tr class="<%= d.dropRate > 20 ? 'highlight-green' : '' %>">
                                    <td>#<%= d.horseNo %></td>
                                    <td><%= d.odds30 %></td>
                                    <td><%= d.odds0 %></td>
                                    <td class="<%= d.dropRate > 0 ? 'trend-up' : 'trend-down' %>">
                                        <%= d.dropRate.toFixed(1) %>%
                                    </td>
                                    <td><%= d.isSuddenDrop ? '⚠️' : '' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Fund Flow -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-warning text-dark">Fund Flow (Smart Money)</div>
                <div class="card-body">
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Horse</th>
                                <th>Share T-0</th>
                                <th>Change (5m)</th>
                                <th>Alert</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% fundFlow.sort((a,b) => b.share0 - a.share0).forEach(f => { %>
                                <tr class="<%= f.isReverseMoney ? 'highlight-red' : '' %>">
                                    <td>#<%= f.horseNo %></td>
                                    <td><%= f.share0.toFixed(1) %>%</td>
                                    <td class="<%= f.shareChange5 > 0 ? 'trend-up' : 'trend-down' %>">
                                        <%= f.shareChange5 > 0 ? '+' : '' %><%= f.shareChange5.toFixed(1) %>%
                                    </td>
                                    <td>
                                        <% if (f.isReverseMoney) { %>
                                            <span class="badge bg-danger">Reverse Money</span>
                                        <% } %>
                                        <% if (f.hotMoneyRank <= 3) { %>
                                            <span class="badge bg-success">Hot <%= f.hotMoneyRank %></span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
