            margin-bottom: 15px;
            font-weight: bold;
        }

        .stat-value {
            font-size: 3em;
            font-weight: bold;
            margin: 10px 0;
            color: var(--text-main);
        }

        .stat-sub {
            font-size: 0.9em;
            color: var(--text-muted);
            margin-top: 10px;
        }

        .stat-desc {
            font-size: 0.8em;
            color: var(--text-muted);
            margin-top: 15px;
            border-top: 1px solid var(--border-color);
            padding-top: 10px;
        }

        .loading { text-align: center; font-size: 1.2em; color: var(--text-muted); margin-top: 50px; }
