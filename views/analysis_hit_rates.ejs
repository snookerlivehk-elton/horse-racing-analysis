    <script>
        async function fetchStats() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            document.getElementById('loading').style.display = 'block';
            document.getElementById('results').style.display = 'none';

            try {
                const response = await fetch(`/api/analysis/hit-rates?startDate=${startDate}&endDate=${endDate}`);
                const data = await response.json();
                
                renderStats(data);
            } catch (error) {
                alert('ç²å–æ•¸æ“šå¤±æ•—: ' + error.message);
            } finally {
                document.getElementById('loading').style.display = 'none';
                document.getElementById('results').style.display = 'block';
            }
        }

        function formatPct(hits, total) {
            if (total === 0) return '-';
            const pct = (hits / total * 100).toFixed(1);
            return `${pct}% (${hits}/${total})`;
        }

        function renderStats(data) {
            document.getElementById('totalRaces').innerText = data.totalRaces;

            // Render Pundit Stats
            const p = data.punditStats;
            const pRow = `
                <tr>
                    <td>æ•´é«”è¡¨ç¾</td>
                    <td>${formatPct(p.winHit, p.count)}</td>
                    <td>${formatPct(p.qHit, p.count)}</td>
                    <td>${formatPct(p.tHit, p.count)}</td>
                    <td>${formatPct(p.f4Hit, p.count)}</td>
                </tr>
            `;
            document.getElementById('punditTable').innerHTML = pRow;

            // Render Trend Stats
            const t = data.trendStats;
            // Sort keys descending (30, 25, 20...)
            const keys = Object.keys(t).sort((a, b) => parseInt(b) - parseInt(a));
            
            let tHtml = '';
            keys.forEach(k => {
                const item = t[k];
                tHtml += `
                    <tr>
                        <td>T-${k}</td>
                        <td>${formatPct(item.winHit, item.count)}</td>
                        <td>${formatPct(item.qHit, item.count)}</td>
                        <td>${formatPct(item.tHit, item.count)}</td>
                        <td>${formatPct(item.f4Hit, item.count)}</td>
                        <td>${item.count}</td>
                    </tr>
                `;
            });
            
            if (keys.length === 0) {
                tHtml = '<tr><td colspan="6">æ²’æœ‰èµ°å‹¢æ•¸æ“š</td></tr>';
