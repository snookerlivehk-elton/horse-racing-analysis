    <script>
        let currentData = [];
        let chartInstance = null;
        let currentMetric = 'win';
        const BET_COSTS = {
            win: 20,
            q: 30,
            t: 240,
            f4: 3600
        };

        // Set default date range (Last 30 days)
        const today = new Date();
        document.getElementById('endDate').valueAsDate = today;
        const lastMonth = new Date();
        lastMonth.setDate(today.getDate() - 90); // Default 3 months
        document.getElementById('startDate').valueAsDate = lastMonth;

        async function fetchData() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const typeVal = document.getElementById('analysisType').value;
            
            let type = 'pundit';
            let trendKey = '';
            
            if (typeVal === 'composite') {
                type = 'composite';
            } else if (typeVal.startsWith('trend-')) {
                type = 'trend';
                trendKey = typeVal.split('-')[1];
            } else if (typeVal.startsWith('strategy-')) {
                type = 'strategy';
                trendKey = typeVal.split('strategy-')[1];
            }

            try {
                const res = await fetch(`/api/analysis/daily-stats?startDate=${startDate}&endDate=${endDate}&type=${type}&trendKey=${trendKey}`);
                const data = await res.json();
                
                if (data.error) {
                    alert('Error: ' + data.error);
                    return;
                }

                currentData = data; // Sorted by date desc
                renderTable(data);
                renderChart(data);

            } catch (e) {
                alert('Fetch failed: ' + e.message);
            }
        }

        function formatCurrency(val) {
            return '$' + Math.floor(val).toLocaleString();
        }

        function formatRoi(val) {
            const color = val >= 0 ? '#10b981' : '#ef4444';
            const sign = val >= 0 ? '+' : '';
            return `<span style="color:${color}">${sign}${val}%</span>`;
        }

        function renderTable(data) {
            const tbody = document.getElementById('dataTable');
            tbody.innerHTML = '';

            // Calculate Totals
            let totalRaces = 0;
            const totals = {
                win: { hits: 0, revenue: 0 },
                q: { hits: 0, revenue: 0 },
                t: { hits: 0, revenue: 0 },
                f4: { hits: 0, revenue: 0 },
                win6: { hits: 0 },
                q6: { hits: 0 },
                t6: { hits: 0 },
                f46: { hits: 0 }
            };

            data.forEach(d => {
                totalRaces += d.raceCount;
                ['win', 'q', 't', 'f4'].forEach(type => {
                    totals[type].hits += d[type].hits;
                    totals[type].revenue += d[type].revenue;
                });
                ['win6', 'q6', 't6', 'f46'].forEach(type => {
                    if (d[type]) totals[type].hits += d[type].hits;
                });
            });

            // Helper to calc total ROI
            const calcTotalRoi = (type) => {
                if (totalRaces === 0) return 0;
                const totalCost = totalRaces * BET_COSTS[type];
                const net = totals[type].revenue - totalCost;
                return totalCost > 0 ? (net / totalCost * 100).toFixed(1) : '0.0';
            };

            const calcTotalRate = (type) => {
                return totalRaces > 0 ? (totals[type].hits / totalRaces * 100).toFixed(1) : '0.0';
            };

            // Insert Total Row
            if (data.length > 0) {
                const totalRow = `
                    <tr class="total-row" style="background: #374151; font-weight: bold; border-bottom: 2px solid #666;">
                        <td style="color: var(--accent-gold);">ç¸½è¨ˆ (Total)</td>
                        <td style="color: var(--accent-gold);">${totalRaces}</td>
                        
                        <!-- Win Total -->
                        <td class="section-border" style="color: var(--accent-gold);">${calcTotalRate('win')}%</td>
                        <td style="color: var(--accent-gold);">${formatCurrency(totals.win.revenue)}</td>
                        <td>${formatRoi(calcTotalRoi('win'))}</td>

                        <!-- Q Total -->
                        <td class="section-border group-alt" style="color: var(--accent-gold);">${calcTotalRate('q')}%</td>
                        <td class="group-alt" style="color: var(--accent-gold);">${formatCurrency(totals.q.revenue)}</td>
                        <td class="group-alt">${formatRoi(calcTotalRoi('q'))}</td>

                        <!-- T Total -->
                        <td class="section-border" style="color: var(--accent-gold);">${calcTotalRate('t')}%</td>
                        <td style="color: var(--accent-gold);">${formatCurrency(totals.t.revenue)}</td>
                        <td>${formatRoi(calcTotalRoi('t'))}</td>

                        <!-- F4 Total -->
                        <td class="section-border group-alt" style="color: var(--accent-gold);">${calcTotalRate('f4')}%</td>
                        <td class="group-alt" style="color: var(--accent-gold);">${formatCurrency(totals.f4.revenue)}</td>
                        <td class="group-alt">${formatRoi(calcTotalRoi('f4'))}</td>

                        <!-- Box 6 Total -->
                        <td class="section-border" style="color: var(--accent-gold);">${calcTotalRate('win6')}%</td>
                        <td style="color: var(--accent-gold);">${calcTotalRate('q6')}%</td>
                        <td style="color: var(--accent-gold);">${calcTotalRate('t6')}%</td>
                        <td style="color: var(--accent-gold);">${calcTotalRate('f46')}%</td>
                    </tr>
                `;
                tbody.innerHTML += totalRow;
            }

            data.forEach(d => {
                const row = `
                    <tr>
                        <td style="font-weight:bold; color:white;">${d.date}</td>
                        <td>${d.raceCount}</td>
                        
                        <!-- Win -->
                        <td class="section-border">${d.win.rate}%</td>
                        <td>${formatCurrency(d.win.revenue)}</td>
                        <td>${formatRoi(d.win.roi)}</td>

                        <!-- Q -->
                        <td class="section-border group-alt">${d.q.rate}%</td>
                        <td class="group-alt">${formatCurrency(d.q.revenue)}</td>
                        <td class="group-alt">${formatRoi(d.q.roi)}</td>

                        <!-- T -->
                        <td class="section-border">${d.t.rate}%</td>
                        <td>${formatCurrency(d.t.revenue)}</td>
                        <td>${formatRoi(d.t.roi)}</td>

                        <!-- F4 -->
                        <td class="section-border group-alt">${d.f4.rate}%</td>
                        <td class="group-alt">${formatCurrency(d.f4.revenue)}</td>
                        <td class="group-alt">${formatRoi(d.f4.roi)}</td>

                        <!-- Box 6 -->
                        <td class="section-border">${d.win6 ? d.win6.rate : 0}%</td>
                        <td>${d.q6 ? d.q6.rate : 0}%</td>
                        <td>${d.t6 ? d.t6.rate : 0}%</td>
                        <td>${d.f46 ? d.f46.rate : 0}%</td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });
        }

        function updateChartMetric(metric) {
            currentMetric = metric;
            
            // Update button styles
            document.querySelectorAll('.metric-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            if (currentData.length > 0) renderChart(currentData);
        }

        function renderChart(data) {
            const ctx = document.getElementById('trendChart').getContext('2d');
            
            // Sort data ascending for chart (Time flows left to right)
            const sortedData = [...data].sort((a, b) => new Date(a.date) - new Date(b.date));
            
            const labels = sortedData.map(d => d.date.substring(5)); // MM-DD
            const values = sortedData.map(d => d[currentMetric].rate);

            if (chartInstance) chartInstance.destroy();

            chartInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: `${currentMetric.toUpperCase()} å‘½ä¸­ç‡ (%)`,
                        data: values,
                        borderColor: '#fbbf24',
                        backgroundColor: 'rgba(251, 191, 36, 0.1)',
                        borderWidth: 2,
                        tension: 0.3, // Smooth curve
                        fill: true,
                        pointBackgroundColor: '#10b981'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            grid: { color: '#404040' },
                            ticks: { color: '#a0a0a0' }
                        },
                        x: {
                            grid: { color: '#404040' },
                            ticks: { color: '#a0a0a0' }
                        }
                    },
                    plugins: {
                        legend: { labels: { color: '#e0e0e0' } },
                        tooltip: {
                            callbacks: {
                                label: (context) => {
                                    const idx = context.dataIndex;
                                    const day = sortedData[idx];
                                    const metric = day[currentMetric];
                                    const labels = [
                                        `å‘½ä¸­ç‡: ${metric.rate}%`,
                                        `å‘½ä¸­: ${metric.hits}/${day.raceCount}å ´`
                                    ];
                                    
                                    if (metric.revenue !== undefined) {
                                        labels.push(`å½©é‡‘: ${formatCurrency(metric.revenue)}`);
                                        labels.push(`ROI: ${metric.roi}%`);
                                    }
                                    return labels;
                                }
                            }
                        }
                    }
                }
            });
        }

        // Load Strategies into Dropdown
        async function loadStrategies() {
            try {
                const res = await fetch('/api/strategies');
                const json = await res.json();
                if (json.success && json.data.length > 0) {
                    const select = document.getElementById('analysisType');
                    const optGroup = document.createElement('optgroup');
                    optGroup.label = 'ğŸ§ª å¯¦é©—å®¤ç­–ç•¥ (Strategies)';
                    
                    json.data.forEach(s => {
                        const option = document.createElement('option');
                        option.value = `strategy-${s.id}`;
                        option.textContent = s.name;
                        optGroup.appendChild(option);
                    });
                    select.appendChild(optGroup);
                }
            } catch (e) {
                console.error('Failed to load strategies', e);
            }
        }

        // Initial fetch
        loadStrategies();
        fetchData();

    </script>
