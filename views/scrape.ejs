    <div class="btn-bar">
        <form method="get" action="/scrape-data">
            <button class="btn btn-primary" type="submit">üîÑ ÈáçÊñ∞Áà¨ÂèñÊúÄÊñ∞Êéí‰Ωç</button>
        </form>
        <button class="btn btn-secondary" type="button" onclick="downloadExcel()">üì• ‰∏ÄÈçµÁîüÊàê Excel</button>
        <a href="/" class="btn-link">üè† ËøîÂõûÈ¶ñÈ†Å</a>
    </div>

    <% if (scrapeResult && scrapeResult.races && scrapeResult.races.length > 0) { %>
        
        <!-- Race Tabs -->
        <div class="tabs">
            <% scrapeResult.races.forEach(function(race, index) { %>
                <div class="tab-btn <%= index === 0 ? 'active' : '' %>" onclick="switchTab(<%= index %>)">
                    Á¨¨ <%= race.raceNumber %> Â†¥
                </div>
            <% }); %>
        </div>

        <!-- Race Contents -->
        <% scrapeResult.races.forEach(function(race, index) { %>
            <div id="race-<%= index %>" class="tab-content <%= index === 0 ? 'active' : '' %>">
                <div class="race-card">
                    <div class="race-header">
                        <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap;">
                            <div>
                                <span style="font-size: 1.2em; color: var(--accent-gold);">Á¨¨ <%= race.raceNumber %> Â†¥</span>
                                <% if (race.conditions) { %>
                                    <span style="margin-left: 10px; color: var(--text-main); font-weight: normal; font-size: 1em;">
                                        <%= race.conditions %>
                                    </span>
                                <% } else if (race.class || race.distance) { %>
                                    <span style="margin-left: 10px; color: var(--text-main); font-weight: normal; font-size: 1em;">
                                        <%= [race.class, race.distance, race.venue, race.track].filter(Boolean).join(' - ') %>
                                    </span>
                                <% } %>
                            </div>
                            <span style="font-size: 0.9em; font-weight: normal; color: var(--text-muted);">ÂÖ± <%= race.horses.length %> Âåπ</span>
                        </div>
                        <div style="margin-top: 10px; display: flex; gap: 10px;">
                            <button class="view-btn active" onclick="toggleView('<%= index %>', 'standard', this)">Êéí‰ΩçË°®</button>
                            <button class="view-btn" onclick="toggleView('<%= index %>', 'stats', this)">Áµ±Ë®àË≥áÊñô</button>
                        </div>
                    </div>
                    
                    <!-- Standard View -->
                    <div id="view-standard-<%= index %>" class="race-view active">
                        <table>
                            <thead>
                                <tr>
                                    <th width="50">È¶¨Ëôü</th>
                                    <th style="text-align: left;">È¶¨Âêç (Á∑®Ëôü)</th>
                                    <th>È®éÂ∏´</th>
                                    <th>Á∑¥È¶¨Â∏´</th>
                                    <th>Ê™î‰Ωç</th>
                                    <th>Ë≤†Á£Ö</th>
                                    <th>Ë©ïÂàÜ</th>
                                    <th>ÂæÄÁ∏æ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% race.horses.forEach(function(horse, hIndex) { %>
                                    <tr>
                                        <td class="horse-no"><%= horse.number %></td>
                                        <td style="text-align: left;">
                                            <div class="horse-name">
                                                <a href="/horse/<%= horse.horseId %>" style="color: var(--accent-blue); text-decoration: none;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">
                                                    <%= horse.name %>
                                                </a>
                                            </div>
                                            <div class="badge"><%= horse.horseId %></div>
                                        </td>
                                        <td><%= horse.jockey %></td>
                                        <td><%= horse.trainer %></td>
                                        <td><%= horse.draw %></td>
                                        <td><%= horse.weight %></td>
                                        <td><%= horse.rating %></td>
                                        <td>
                                            <% if (horse.performance && horse.performance.rows.length > 0) { %>
                                                <span class="toggle-details" onclick="toggleDetails('details-<%= index %>-<%= hIndex %>')">
                                                    Êü•Áúã (<%= horse.performance.rows.length %>Â†¥)
                                                </span>
                                            <% } else { %>
                                                <span style="color: #ccc;">ÁÑ°Á¥ÄÈåÑ</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <!-- Performance Details Row -->
                                    <% if (horse.performance && horse.performance.rows.length > 0) { %>
                                        <tr id="details-<%= index %>-<%= hIndex %>" class="details-row">
                                            <td colspan="8" class="details-cell">
                                                <strong><%= horse.name %> ËøëÁ∏æÁ¥ÄÈåÑ:</strong>
                                                <table class="perf-table">
                                                    <thead>
                                                        <tr>
                                                            <th>Â†¥Ê¨°</th><th>ÂêçÊ¨°</th><th>Êó•Êúü</th><th>Ë∑ØÁ®ã</th><th>Â†¥Âú∞</th>
                                                            <th>Áè≠Ê¨°</th><th>È®éÂ∏´</th><th>Ë©ïÂàÜ</th><th>Áç®Ë¥è</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% horse.performance.rows.slice(0, 6).forEach(function(row) { %>
                                                            <tr>
                                                                <!-- Mapping roughly based on standard HKJC scrape columns -->
                                                                <td><%= row.columns[0] || '-' %></td>
                                                                <td><%= row.columns[1] || '-' %></td>
                                                                <td><%= row.columns[2] || '-' %></td>
                                                                <td><%= row.columns[4] || '-' %></td>
                                                                <td><%= row.columns[5] || '-' %></td>
                                                                <td><%= row.columns[6] || '-' %></td>
                                                                <td><%= row.columns[10] || '-' %></td>
                                                                <td><%= row.columns[8] || '-' %></td>
                                                                <td><%= row.columns[12] || '-' %></td>
                                                            </tr>
                                                        <% }); %>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Statistics View -->
                    <div id="view-stats-<%= index %>" class="race-view" style="display: none; overflow-x: auto;">
                        <table class="stats-table" style="width: 100%; min-width: 1000px;">
                            <thead>
                                <tr>
                                    <th rowspan="2">È¶¨Âêç</th>
                                    <th rowspan="2">È¶¨ÈΩ°/ÊÄßÂà•</th>
                                    <th rowspan="2">Ë≤†Á£Ö</th>
                                    <th rowspan="2">Ë©ïÂàÜ</th>
                                    <th colspan="2">Á∏ΩÊàêÁ∏æ</th>
                                    <th colspan="3">Â†¥Âú∞/Ë∑ØÁ®ã</th>
                                    <th colspan="1">È®éÂ∏´</th>
                                    <th colspan="3">Â†¥Âú∞ÁãÄÊ≥Å</th>
                                </tr>
                                <tr>
                                    <th style="font-size: 0.8em;">Âá∫ÈÅìËá≥‰ªä</th>
                                    <th style="font-size: 0.8em;">‰ªäÂ≠£</th>
                                    <th style="font-size: 0.8em;">ÂêåÁè≠</th>
                                    <th style="font-size: 0.8em;">ÂêåÁ®ã</th>
                                    <th style="font-size: 0.8em;">ÂêåÂ†¥ÂêåÁ®ã</th>
                                    <th style="font-size: 0.8em;">Âêà‰ΩúÊàêÁ∏æ</th>
                                    <th style="font-size: 0.8em;">Â•ΩÂú∞</th>
                                    <th style="font-size: 0.8em;">ÈªèÂú∞</th>
                                    <th style="font-size: 0.8em;">Ëªü/ÁàõÂú∞</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% race.horses.forEach(function(horse) { %>
                                    <tr>
                                        <td style="font-weight: bold;"><%= horse.name %></td>
                                        <!-- Age/Sex -->
                                        <td><%= horse.age && horse.sex ? `${horse.age}/${horse.sex}` : (horse.age || horse.sex || '-') %></td>
                                        <td><%= horse.weight %></td>
                                        <td><%= horse.rating %></td>
                                        
                                        <% if (horse.stats) { %>
                                            <td><%= horse.stats.lifetime || '-' %></td>
                                            <td><%= horse.stats.currentSeason || '-' %></td>
                                            <td><%= horse.stats.thisClass || '-' %></td>
                                            <td><%= horse.stats.thisDistance || '-' %></td>
                                            <td><%= horse.stats.thisCourseDistance || '-' %></td>
