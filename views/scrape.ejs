    <script>
        function toggleView(raceIndex, viewType, btn, raceId) {
            const container = document.getElementById(`race-${raceIndex}`);
            // Hide all views in this race
            container.querySelectorAll('.race-view').forEach(el => el.style.display = 'none');
            // Show selected view
            const view = document.getElementById(`view-${viewType}-${raceIndex}`);
            if (view) view.style.display = 'block';
            
            // Update buttons
            const btnContainer = btn.parentElement;
            btnContainer.querySelectorAll('.view-btn').forEach(el => el.classList.remove('active'));
            btn.classList.add('active');

            // Load analysis if requested
            if (viewType === 'analysis' && raceId) {
                loadAnalysis(raceIndex, raceId);
            }
        }

        async function loadAnalysis(raceIndex, raceId) {
            const container = document.getElementById(`analysis-content-${raceIndex}`);
            if (!container) return;
            
            // If already loaded, don't reload (unless we want refresh)
            if (container.getAttribute('data-loaded') === 'true') return;

            container.innerHTML = '<div style="text-align:center; padding: 40px;"><div style="font-size: 2em;">â³</div><div>æ­£åœ¨åˆ†ææ™¨æ“èˆ‡è©¦é–˜æ•¸æ“š...</div></div>';
            
            try {
                const res = await fetch(`/api/analysis/score/${raceId}`);
                if (!res.ok) {
                    const err = await res.json();
                    throw new Error(err.error || 'ç„¡æ³•è¼‰å…¥åˆ†ææ•¸æ“š');
                }
                const data = await res.json();
                
                renderAnalysis(container, data.scores);
                container.setAttribute('data-loaded', 'true');
            } catch (e) {
                container.innerHTML = `<div class="error">è¼‰å…¥åˆ†æå¤±æ•—: ${e.message}<br><small>è«‹ç¢ºä¿å·²çˆ¬å–è©²å ´è³½äº‹ä¸”æ•¸æ“šåº«å·²åŒæ­¥</small></div>`;
            }
        }

        function renderAnalysis(container, scores) {
            if (!scores || scores.length === 0) {
                container.innerHTML = '<div style="text-align:center; padding: 20px;">æš«ç„¡è©•åˆ†æ•¸æ“š</div>';
                return;
            }

            // scores is array of HorseScore
            
            let html = `
                <div style="margin-bottom: 15px; font-size: 0.9em; color: #aaa; text-align: right;">
                    * è©•åˆ†æ¨™æº–: æ™¨æ“(60%) + è©¦é–˜(40%) | æ´»èºåº¦åŠ åˆ†
                </div>
                <table class="stats-table" style="width:100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background: #333; color: #fff;">
                            <th width="60">æ’å</th>
                            <th style="text-align:left; padding-left: 10px;">é¦¬åŒ¹</th>
                            <th width="100">ç¶œåˆè©•åˆ†</th>
                            <th width="100">æ™¨æ“åˆ†</th>
                            <th width="100">è©¦é–˜åˆ†</th>
                            <th style="text-align:left;">è©³ç´°åˆ†æ</th>
                        </tr>
                    </thead>
                    <tbody>`;
            
            scores.forEach((s, i) => {
                // Color coding
                let scoreColor = '#e0e0e0';
                let rowBg = i % 2 === 0 ? 'var(--table-row-even)' : 'var(--table-row-odd)';
                
                if (s.totalScore >= 80) scoreColor = '#10b981'; // Green
                else if (s.totalScore >= 60) scoreColor = '#fbbf24'; // Yellow
                else if (s.totalScore < 40) scoreColor = '#ef4444'; // Red

                // Icon for top 3
                let rankIcon = i < 3 ? ['ğŸ¥‡','ğŸ¥ˆ','ğŸ¥‰'][i] : (i+1);

                // Breakdown details
                const trackwork = s.breakdown.trackworkScore;
                const trial = s.breakdown.trialScore;
                // details might be object or string, assume object from scoringEngine
                // details: { trackwork: { score: ..., details: ... }, trial: ... }
                // Wait, in scoringEngine: breakdown: { trackworkScore, trialScore, details: { trackwork: ..., trial: ... } }
                
                const twDetails = s.breakdown.details?.trackwork?.details || s.breakdown.details?.trackwork || '-';
                
                html += `
                    <tr style="background: ${rowBg}; border-bottom: 1px solid #444;">
                        <td style="text-align:center; font-weight:bold; font-size: 1.1em;">${rankIcon}</td>
                        <td style="text-align:left; padding: 10px;">
                            <a href="/horse/${s.horseId}" style="color: #fff; text-decoration: none; font-weight: 500;">
                                ${s.horseName}
                            </a>
                        </td>
                        <td style="text-align:center; font-size: 1.2em; font-weight: bold; color: ${scoreColor};">
                            ${s.totalScore}
                        </td>
                        <td style="text-align:center;">${trackwork}</td>
                        <td style="text-align:center;">${trial}</td>
                        <td style="text-align:left; font-size: 0.85em; color: #ccc; padding: 8px;">
                            ${twDetails}
                        </td>
                    </tr>`;
            });

            html += '</tbody></table>';
            container.innerHTML = html;
        }

        function downloadExcel() {
            window.location.href = '/scrape-data/excel';
        }

        function switchTab(index) {
            // Hide all contents
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            // Remove active class from all tabs
            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
            
            // Show selected
            document.getElementById('race-' + index).classList.add('active');
            // Highlight tab
            document.querySelectorAll('.tab-btn')[index].classList.add('active');
        }

        function toggleDetails(id) {
            const row = document.getElementById(id);
            if (row.style.display === 'table-row') {
                row.style.display = 'none';
            } else {
                row.style.display = 'table-row';
            }
        }
    </script>
</body>
