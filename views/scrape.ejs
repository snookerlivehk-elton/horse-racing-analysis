        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 10px 8px; text-align: center; border-bottom: 1px solid var(--border-color); font-size: 0.9em; }
        th { 
            background-color: var(--table-header-bg); 
            font-weight: 600; 
            color: var(--text-muted); 
            text-transform: uppercase;
            font-size: 0.8em;
            letter-spacing: 0.5px;
        }
        tr { background-color: var(--table-row-odd); }
        tr:nth-child(even) { background-color: var(--table-row-even); }
        tr:hover { background-color: #383838; }
        
        .horse-no { 
            font-weight: bold; 
            color: var(--accent-gold); 
            font-family: 'Roboto Mono', monospace;
            font-size: 1.1em;
        }
        .horse-name { font-weight: bold; color: white; text-align: left; font-size: 1em; }
        .badge { 
            display: inline-block; 
            padding: 1px 5px; 
            font-size: 0.7em; 
            border-radius: 2px; 
            background: #404040; 
            color: #aaa; 
            margin-top: 2px;
            font-family: monospace;
        }
        
        .details-row { display: none; background-color: #222 !important; }
        .details-row.show { display: table-row; }
        .details-cell { padding: 15px; text-align: left; border-top: 1px solid var(--accent-blue); }
        .toggle-details { 
            cursor: pointer; 
            color: var(--accent-blue); 
            font-size: 0.85em; 
            padding: 2px 8px;
            border: 1px solid var(--accent-blue);
            border-radius: 10px;
            transition: all 0.2s;
        }
        .toggle-details:hover { background: var(--accent-blue); color: white; }

        .perf-table { width: 100%; margin-top: 10px; border: 1px solid var(--border-color); background: #1a1a1a; }
        .perf-table th { background: #333; color: #ccc; border-bottom: 1px solid #444; }
        .perf-table td { color: #bbb; border-bottom: 1px solid #333; }
        .perf-table tr:hover { background: #252525; }

        /* Mobile adjustments */
        @media (max-width: 600px) {
            th, td { padding: 8px 4px; font-size: 0.8em; }
            .badge { display: block; width: fit-content; }
            .btn-bar { flex-direction: column; }
            .btn { width: 100%; }
        }
    </style>
</head>
