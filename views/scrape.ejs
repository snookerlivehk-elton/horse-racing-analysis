    <style>
        :root {
            --bg-dark: #1e1e1e;
            --bg-panel: #2d2d2d;
            --text-main: #e0e0e0;
            --text-muted: #a0a0a0;
            --accent-gold: #fbbf24;
            --accent-green: #10b981;
            --accent-blue: #3b82f6;
            --border-color: #404040;
            --table-header-bg: #333333;
            --table-row-even: #252525;
            --table-row-odd: #2a2a2a;
        }

        body { 
            font-family: 'Roboto', 'Segoe UI', Tahoma, sans-serif; 
            padding: 0; 
            background-color: var(--bg-dark); 
            color: var(--text-main);
            margin: 0; 
            min-height: 100vh;
        }

        h1 { 
            color: var(--accent-gold); 
            text-align: center; 
            margin: 20px 0 10px; 
            font-size: 1.5em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .meta-info { 
            text-align: center; 
            margin-bottom: 20px; 
            color: var(--text-muted); 
            font-size: 0.85em; 
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 15px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 10px;
        }

        .btn-bar { display: flex; justify-content: center; gap: 12px; margin-bottom: 20px; flex-wrap: wrap; }
        .btn { 
            padding: 8px 20px; 
            border-radius: 4px; 
            border: none; 
            cursor: pointer; 
            font-size: 0.9em; 
            font-weight: 600; 
            transition: all 0.2s; 
            text-transform: uppercase;
        }
        .btn-primary { background-color: var(--accent-blue); color: white; }
