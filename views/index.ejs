                document.getElementById('results').style.display = 'block';
            }
        }

        function formatPct(hits, total, yieldVal) {
            if (total === 0) return '-';
            const pct = (hits / total * 100).toFixed(1);
            const yieldStr = yieldVal ? `$${yieldVal.toLocaleString()}` : '$0';
            return `
                <div style="font-size: 1.1em; font-weight: bold;">${pct}%</div>
                <div style="font-size: 0.9em; color: #aaa;">(${hits}/${total})</div>
                <div style="color: #fbbf24; margin-top: 4px;">${yieldStr}</div>
            `;
        }

        function renderStats(data) {
            document.getElementById('totalRaces').innerText = data.totalRaces;

            // Render Pundit Stats
            const p = data.punditStats;
            const pRow = `
                <tr>
                    <td>æ•´é«”è¡¨ç¾</td>
                    <td>${formatPct(p.winHit, p.count, p.winYield)}</td>
                    <td>${formatPct(p.qHit, p.count, p.qYield)}</td>
                    <td>${formatPct(p.tHit, p.count, p.tYield)}</td>
                    <td>${formatPct(p.f4Hit, p.count, p.f4Yield)}</td>
                </tr>
            `;
            document.getElementById('punditTable').innerHTML = pRow;

            // Render Trend Stats
            const trendTable = document.getElementById('trendTable');
            trendTable.innerHTML = '';
            
            const timeKeys = Object.keys(data.trendStats).sort((a, b) => Number(b) - Number(a)); // T30 -> T0
            
            timeKeys.forEach(key => {
                const t = data.trendStats[key];
                const row = `
                    <tr>
                        <td>T-${key}</td>
                        <td>${formatPct(t.winHit, t.count, t.winYield)}</td>
                        <td>${formatPct(t.qHit, t.count, t.qYield)}</td>
                        <td>${formatPct(t.tHit, t.count, t.tYield)}</td>
                        <td>${formatPct(t.f4Hit, t.count, t.f4Yield)}</td>
                        <td>${t.count}</td>
                    </tr>
                `;
                trendTable.innerHTML += row;
            });
        }
