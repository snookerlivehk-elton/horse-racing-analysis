        function formatPct(hits, total, revenue, cost) {
            if (total === 0) return '-';
            
            const pct = (hits / total * 100).toFixed(1);
            const net = revenue - cost;
            const roi = cost > 0 ? (net / cost * 100).toFixed(1) : '0.0';
            
            // Color logic for Net Profit
