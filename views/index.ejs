    <script>
        async function fetchStats(period) {
            const startDateStr = document.getElementById('startDate').value;
            if (!startDateStr) {
                alert('è«‹é¸æ“‡é–‹å§‹æ—¥æœŸ');
                return;
            }

            const startDate = new Date(startDateStr);
            let endDate = new Date(startDateStr);
            let label = '';

            if (period === '1w') {
                endDate.setDate(startDate.getDate() + 7);
                label = `${startDateStr} è‡³ ${endDate.toISOString().split('T')[0]} (1 æ˜ŸæœŸ)`;
            } else if (period === '1m') {
                endDate.setMonth(startDate.getMonth() + 1);
                label = `${startDateStr} è‡³ ${endDate.toISOString().split('T')[0]} (1 å€‹æœˆ)`;
            } else if (period === '3m') {
                endDate.setMonth(startDate.getMonth() + 3);
                label = `${startDateStr} è‡³ ${endDate.toISOString().split('T')[0]} (3 å€‹æœˆ)`;
            }

            const endDateStr = endDate.toISOString().split('T')[0];
            
            document.getElementById('loading').style.display = 'block';
            document.getElementById('results').style.display = 'none';
            document.getElementById('periodLabel').innerText = label;

            try {
                const response = await fetch(`/api/analysis/hit-rates?startDate=${startDateStr}&endDate=${endDateStr}`);
                const data = await response.json();
                
                renderStats(data);
            } catch (error) {
                alert('ç²å–æ•¸æ“šå¤±æ•—: ' + error.message);
            } finally {
